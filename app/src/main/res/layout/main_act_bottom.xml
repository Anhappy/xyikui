<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="47dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:baselineAligned="false"
    android:background="@color/toptitle_btm_bgall"
    android:gravity="center_horizontal"
    android:paddingTop="2sp"
    android:orientation="horizontal" >
    <FrameLayout
        android:id="@+id/fyt_home"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="@dimen/top_title_icsize"
            android:layout_height="@dimen/top_title_icsize"
            android:layout_gravity="top|center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="null"
            android:src="@drawable/bottom_home_selector"
            android:visibility="visible" />

        <TextView
            android:id="@+id/bottom_tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:text="@string/top_title_circle"
            android:textColor="@color/toptitle_btm_bgtext"
            android:textSize="@dimen/font_small" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fyt_video"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="@dimen/top_title_icsize"
            android:layout_height="@dimen/top_title_icsize"
            android:layout_gravity="top|center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@null"
            android:src="@drawable/bottom_video_selector"
            android:visibility="visible" />

        <TextView
            android:id="@+id/bottom_tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:text="@string/top_title_video"
            android:textColor="@color/toptitle_btm_bgtext"
            android:textSize="@dimen/font_small" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fyt_find"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="@dimen/top_title_icsize"
            android:layout_height="@dimen/top_title_icsize"
            android:layout_gravity="top|center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="null"
            android:src="@drawable/bottom_find_selector"
            android:visibility="visible" />

        <TextView
            android:id="@+id/bottom_tv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:text="@string/top_title_find"
            android:textColor="@color/toptitle_btm_bgtext"
            android:textSize="@dimen/font_small" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fyt_my"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="@dimen/top_title_icsize"
            android:layout_height="@dimen/top_title_icsize"
            android:layout_gravity="top|center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="null"
            android:src="@drawable/bottom_my_selector"
            android:visibility="visible" />
		<ImageView
            android:id="@+id/red_dot_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_red_dot"
            android:visibility="gone"
            android:contentDescription="@null"/>
        <TextView
            android:id="@+id/bottom_tv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:text="@string/top_title_me"
            android:textColor="@color/toptitle_btm_bgtext"
            android:textSize="@dimen/font_small" />
        
    </FrameLayout>

</LinearLayout>