<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_title_rly_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_title_h"
    android:orientation="horizontal"
    android:background="@color/toptitle_bg">
    <!-- Left -->

    <LinearLayout
        android:id="@+id/my_title_lyt_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <!-- 左边的箭头 -->
        <ImageView
            android:id="@+id/my_title_leftimage"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:paddingBottom="9dp"
            android:paddingLeft="5dp"
            android:paddingRight="30dp"
            android:paddingTop="9dp" />
        <!-- 左边的文字 -->
        <TextView
            android:id="@+id/my_title_lefttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="返回"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/toptitle_font"
            android:visibility="gone"/>

    </LinearLayout>
    <!-- Center -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <!-- 标题 -->
        <TextView
            android:id="@+id/my_title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="标题"
            android:textColor="@color/toptitle_font"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_title_lyt_right"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:gravity="right"
        android:orientation="horizontal">
        <!-- 右边的图片 -->
        <ImageView
            android:id="@+id/my_title_rightimage"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:paddingBottom="9dp"
            android:paddingLeft="5dp"
            android:paddingRight="30dp"
            android:paddingTop="9dp" />
        <!-- 右边的文字 -->
        <TextView
            android:id="@+id/my_title_righttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="保存"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/toptitle_font"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>